<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f6f7"
    tools:context=".UpdateProfileActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ablUpdateProfileScreenAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbUpdateProfileToolBar"
            app:titleTextAppearance="@style/title_default"
            app:title="Update Profile"
            app:navigationIcon="@drawable/ic_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_margin="20dp"
        android:textColor="@color/primaryColor"
        android:textAllCaps="false"
        android:fontFamily="@font/milliard_book"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/ablUpdateProfileScreenAppBar"
        android:text="Log Out"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bToDeleteAccount"
        android:textSize="16sp"
        android:fontFamily="@font/milliard_book"
        android:textColor="@color/primaryColor"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bLogOut"
        android:text="Delete Account"/>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f6f7"
    android:layout_height="match_parent"
    tools:context=".ExamplesFragment">
    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingEnd="10dp"
        android:background="@color/white"
        app:searchIcon="@drawable/ic_search"
        app:closeIcon="@drawable/ic_close_24"
        app:queryHint="Search by title"
        app:iconifiedByDefault="false"
        android:id="@+id/svExamples"
        app:layout_constraintTop_toTopOf="parent"/>



    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbExamplesProgress"
        app:layout_constraintTop_toBottomOf="@id/svExamples"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:indicatorColor="@color/primaryColor"
        app:trackCornerRadius="2dp"
        android:indeterminate="true"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExamples"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/svExamples"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/major_background"
    android:layout_width="match_parent"
    android:isScrollContainer="true"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ablHomeScreenAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbHomeToolBar"
            app:title="C++"
            android:gravity="center_vertical"
            app:titleTextAppearance="@style/cpp_title"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/home_activity_appbar"
            android:background="@color/white"/>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/flFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bnvHomeFragmentNavigator"
        app:layout_constraintTop_toBottomOf="@+id/ablHomeScreenAppBar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvHomeFragmentNavigator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearanceActive="@style/bottomNavigationActiveText"
        app:itemTextAppearanceInactive="@style/bottomNavigationInactiveText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/home_activity_bnv"/>

</androidx.constraintlayout.widget.ConstraintLayout>